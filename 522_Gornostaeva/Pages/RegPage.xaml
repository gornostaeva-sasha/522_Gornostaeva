<Page x:Class="_522_Gornostaeva.Pages.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Регистрация">

    <Grid Width="600"
          Height="400"
          HorizontalAlignment="Center"
          VerticalAlignment="Center"
          Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.ColumnSpan="2"
               Content="Регистрация пользователя"
               FontSize="22"
               FontWeight="Bold"
               HorizontalAlignment="Center"
               Margin="0,0,0,20"
               Style="{StaticResource LabelStyle}"/>

        <Label Grid.Row="1" Grid.Column="0"
               Content="Логин:"
               VerticalAlignment="Center"
               HorizontalAlignment="Right"
               Margin="0,0,10,0"
               Style="{StaticResource LabelStyle}"/>

        <Grid Grid.Row="1" Grid.Column="1">
            <TextBox x:Name="txtbxLog"
                     Height="32"
                     TextChanged="txtbxLog_TextChanged"
                     Style="{StaticResource TextBoxStyle}"/>
            <Label x:Name="lblLogHitn"
                   Content="Введите логин"
                   Foreground="Gray"
                   VerticalAlignment="Center"
                   Margin="8,0,0,0"
                   MouseLeftButtonUp="lblLogHitn_MouseLeftButtonUp"/>
        </Grid>

        <Label Grid.Row="2" Grid.Column="0"
               Content="Пароль:"
               VerticalAlignment="Center"
               HorizontalAlignment="Right"
               Margin="0,0,10,0"
               Style="{StaticResource LabelStyle}"/>

        <Grid Grid.Row="2" Grid.Column="1">
            <PasswordBox x:Name="passBxFrst"
                         Height="32"
                         PasswordChanged="passBxFrst_PasswordChanged"
                         Style="{StaticResource PasswordBoxStyle}"/>
            <Label x:Name="lblPassHitn"
                   Content="Введите пароль"
                   Foreground="Gray"
                   VerticalAlignment="Center"
                   Margin="8,0,0,0"
                   MouseLeftButtonUp="lblPassHitn_MouseLeftButtonUp"/>
        </Grid>

        <Label Grid.Row="3" Grid.Column="0"
               Content="Повторите пароль:"
               VerticalAlignment="Center"
               HorizontalAlignment="Right"
               Margin="0,0,10,0"
               Style="{StaticResource LabelStyle}"/>

        <Grid Grid.Row="3" Grid.Column="1">
            <PasswordBox x:Name="passBxScnd"
                         Height="32"
                         PasswordChanged="passBxScnd_PasswordChanged"
                         Style="{StaticResource PasswordBoxStyle}"/>
            <Label x:Name="lblPassSecHitn"
                   Content="Повторите пароль"
                   Foreground="Gray"
                   VerticalAlignment="Center"
                   Margin="8,0,0,0"
                   MouseLeftButtonUp="lblPassSecHitn_MouseLeftButtonUp"/>
        </Grid>


        <Label Grid.Row="4" Grid.Column="0"
               Content="Роль:"
               VerticalAlignment="Center"
               HorizontalAlignment="Right"
               Margin="0,0,10,0"
               Style="{StaticResource LabelStyle}"/>

        <ComboBox x:Name="comboBxRole"
                  Grid.Row="4"
                  Grid.Column="1"
                  Height="32"
                  Width="220"
                  HorizontalAlignment="Left"
                  Style="{StaticResource ComboBoxStyle}">
            <ComboBoxItem Content="Admin"/>
            <ComboBoxItem Content="User"/>
        </ComboBox>


        <Label Grid.Row="5" Grid.Column="0"
               Content="ФИО:"
               VerticalAlignment="Top"
               HorizontalAlignment="Right"
               Margin="0,10,10,0"
               Style="{StaticResource LabelStyle}"/>

        <Grid Grid.Row="5" Grid.Column="1">
            <TextBox x:Name="txtbxFIO"
                     Height="32"
                     TextChanged="txtbxFIO_TextChanged"
                     Style="{StaticResource TextBoxStyle}" Margin="0,10,0,171"/>
            <Label x:Name="lblFioHitn"
                   Content="Введите ФИО"
                   Foreground="Gray"
                   VerticalAlignment="Top"
                   Margin="10,13,-2,0"
                   MouseLeftButtonUp="lblFioHitn_MouseLeftButtonUp"/>
        </Grid>

        <Button x:Name="regButton"
                Grid.Row="5"
                Grid.Column="1"
                Content="Зарегистрироваться"
                Width="220"
                Height="40"
                Margin="10,87,0,86"
                HorizontalAlignment="Left"
                Click="regButton_Click"
                Style="{StaticResource ButtonStyle}"/>

    </Grid>
</Page>
