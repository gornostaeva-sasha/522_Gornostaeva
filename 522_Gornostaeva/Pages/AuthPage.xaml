<Page x:Class="_522_Gornostaeva.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d"
      Title="AuthPage">

    <Grid Width="800"
          Height="450"
          HorizontalAlignment="Center"
          VerticalAlignment="Center">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Label Content="Авторизация"
               Grid.ColumnSpan="2"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               FontSize="24"
               FontWeight="Bold"
               Margin="0,20,0,30"
               Style="{StaticResource LabelStyle}"/>

        <!-- Логин -->
        <Label x:Name="labelLogin"
               Content="Логин:"
               Grid.Row="1"
               HorizontalAlignment="Right"
               VerticalAlignment="Center"
               Margin="0,0,10,0"
               Style="{StaticResource LabelStyle}" />
        <TextBox x:Name="TextBoxLogin"
                 Grid.Row="1"
                 Grid.Column="1"
                 Width="220"
                 Height="34"
                 VerticalAlignment="Center"
                 ToolTip="Введите логин или почту"
                 TextChanged="TextBoxLogin_TextChanged"
                 Style="{StaticResource TextBoxStyle}" />

        <!-- Пароль -->
        <Label x:Name="labelPass"
               Content="Пароль:"
               Grid.Row="2"
               HorizontalAlignment="Right"
               VerticalAlignment="Center"
               Margin="0,0,10,0"
               Style="{StaticResource LabelStyle}" />
        <PasswordBox x:Name="PasswordBox"
                     Grid.Row="2"
                     Grid.Column="1"
                     Width="220"
                     Height="32"
                     VerticalAlignment="Center"
                     ToolTip="Введите пароль"
                     PasswordChanged="PasswordBox_PasswordChanged"
                     Style="{StaticResource PasswordBoxStyle}" />

        <!-- Капча -->
        <Label x:Name="labelCaptcha"
               Content="Капча:"
               Grid.Row="3"
               HorizontalAlignment="Right"
               VerticalAlignment="Center"
               Margin="0,0,10,0"
               Visibility="Hidden"
               Style="{StaticResource LabelStyle}" />
        <TextBox x:Name="captcha"
                 Grid.Row="3"
                 Grid.Column="1"
                 Height="42"
                 Width="160"
                 Visibility="Hidden"
                 Foreground="Red"
                 FontStyle="Italic"
                 FontWeight="Heavy"
                 FontSize="20"
                 FontStretch="UltraCondensed"
                 HorizontalContentAlignment="Center"
                 VerticalContentAlignment="Center"
                 IsReadOnly="True"
                 Background="{x:Null}"
                 ContextMenu="{x:Null}"
                 CommandManager.PreviewExecuted="textBox_PreviewExecuted"
                 Style="{StaticResource TextBoxStyle}" />

        <TextBox x:Name="captchaInput"
                 Grid.Row="4"
                 Grid.Column="1"
                 Height="34"
                 Width="160"
                 Margin="0,0,0,10"
                 Visibility="Hidden"
                 Style="{StaticResource TextBoxStyle}" />

        <!-- Кнопки -->
        <StackPanel Grid.Row="4"
                    Grid.Column="1"
                    Orientation="Vertical"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Center"
                    Margin="0,30,0,0"
                    Width="160">

            <Button x:Name="ButtonEnter"
                    Content="Вход"
                    Height="40"
                    Margin="0,0,0,10"
                    Style="{StaticResource ButtonStyle}"
                    Click="ButtonEnter_OnClick"/>

            <Button x:Name="ButtonReg"
                    Content="Регистрация"
                    Height="40"
                    Margin="0,0,0,10"
                    Style="{StaticResource ButtonStyle}"
                    Click="ButtonReg_Click"/>

            <Button x:Name="ButtonChangePassword"
                    Content="Смена пароля"
                    Height="40"
                    Margin="0,0,0,10"
                    Style="{StaticResource ButtonStyle}"
                    Click="ButtonChangePassword_Click"/>

            <Button x:Name="submitCaptcha"
                    Content="Подтвердить"
                    Height="40"
                    Visibility="Hidden"
                    Style="{StaticResource ButtonStyle}"
                    Click="submitCaptcha_Click"/>
        </StackPanel>
    </Grid>
</Page>
