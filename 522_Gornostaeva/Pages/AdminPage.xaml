<Page x:Class="_522_Gornostaeva.Pages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="AdminPage">

    <Grid>
        <UniformGrid Rows="2" Columns="3" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,160,0,0"  >
            <Button x:Name="BtnTab1" Content="Таблица пользователей"
                    Style="{StaticResource ButtonStyle}" Height="41" Width="185"
                    Click="BtnTab1_Click"/>
            <Button x:Name="BtnTab2" Content="Таблица категорий"
                    Style="{StaticResource ButtonStyle}" Height="41" Width="173"
                    Click="BtnTab2_Click"/>
            <Button x:Name="BtnTab3" Content="Таблица платежей"
                    Style="{StaticResource ButtonStyle}" Height="41" Width="163"
                    Click="BtnTab3_Click"/>

            <Label Background="Transparent"/>
            <Button x:Name="BtnTab4" Content="Диаграммы"
                    Style="{StaticResource ButtonStyle}" Height="41" Width="131"
                    Click="BtnTab4_Click"/>
            <Label Background="Transparent"/>
        </UniformGrid>
    </Grid>
</Page>
